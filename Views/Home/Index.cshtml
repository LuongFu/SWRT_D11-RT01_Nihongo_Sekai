@model dynamic
@{
    ViewData["Title"] = "Home";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
    ViewData["LockScroll"] = true;
}

<section class="position-relative vw-100 vh-100 text-white d-flex align-items-center justify-content-center overflow-hidden p-0 m-0" style="z-index: 0;">
    <video autoplay loop muted playsinline class="hero-video-bg">
        <source src="https://res.cloudinary.com/dfso7lfxa/video/upload/v1749660098/videoplayback_met85l.mp4" type="video/mp4">
    </video>

    <div class="position-relative z-1 text-center px-4">
        <h1 class="display-4 animate__animated animate__fadeInDown">
            Welcome to Nihongo<span class="display-4 animate__animated animate__fadeInDown gradient-text">Sekai</span>
        </h1>
        <p class="lead animate__animated animate__fadeInUp animate__delay-1s">Learn Japanese with cultural depth</p>
        <a asp-controller="Courses" asp-action="Index" class="btn gradient-btn mt-3 animate__animated animate__fadeInUp animate__delay-2s">Explore Now</a>
    </div>
</section>
<style>
    body.home-lock-scroll {
        overflow: hidden;
    }
</style>