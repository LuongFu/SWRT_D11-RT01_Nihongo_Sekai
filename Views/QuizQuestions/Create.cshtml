@using JapaneseLearningPlatform.Data.Enums
@using JapaneseLearningPlatform.Data.ViewModels
@model QuizQuestionFormVM
@{
    ViewData["Title"] = "Create Quiz Question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4 text-xl font-semibold">Create New Question</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QuizId" />

    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question</label>
        <input asp-for="QuestionText" class="form-control" />
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="QuestionType" class="form-label">Question Type</label>
        <select asp-for="QuestionType" class="form-select">
            <option value="0">Single Choice</option>
            <option value="1">Multiple Choice</option>
        </select>
    </div>

    <hr />
    <h5>Answers</h5>
    @for (int i = 0; i < Model.Options.Count; i++)
    {
        <div class="row mb-3 align-items-center">
            <div class="col-md-1 text-center">
                <input type="checkbox" name="Options[@i].IsCorrect" class="form-check-input"
                       @(Model.QuestionType == QuestionType.SingleChoice ? "onclick=\"toggleSingleChoice(this)\"" : "")
                       @(Model.Options[i].IsCorrect ? "checked" : "") />
            </div>
            <div class="col-md-11">
                <input type="hidden" name="Options[@i].OptionId" value="@Model.Options[i].OptionId" />
                <input type="text" name="Options[@i].OptionText" class="form-control"
                       value="@Model.Options[i].OptionText" placeholder="Enter answer option" />
            </div>
        </div>
    }

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save Question</button>
        <a asp-action="Index" asp-route-quizId="@Model.QuizId" class="btn btn-secondary">Back to Quiz</a>
    </div>
</form>

@section Scripts {
    <script>
        function toggleSingleChoice(clickedCheckbox) {
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => {
                if (cb !== clickedCheckbox) cb.checked = false;
            });
        }
    </script>
}
