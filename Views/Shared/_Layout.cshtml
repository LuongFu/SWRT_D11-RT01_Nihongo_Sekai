@{
    var hideNavbar = ViewData["HideNavbar"] as bool? ?? false;
    var hideFooter = ViewData["HideFooter"] as bool? ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NihongoSekai</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/png" href="~/logo/LogoNihongoSekaiPNGBackground.png" />
    @RenderSection("Styles", required: false)
</head>

<body class="@(ViewData["LockScroll"] as bool? == true ? "home-lock-scroll" : "")">
    <div class="d-flex flex-column min-vh-100">
        @if (!hideNavbar)
        {
            <header class="header">
                <nav class="navbar">
                    <div class="nav-brand">
                        <a asp-controller="Learner" asp-action="Index" class="brand-link">
                            <span class="brand-icon">日</span>
                            <span><span class="brand-nihongo">Nihongo</span> <span class="brand-sekai">Sekai</span></span>
                        </a>
                    </div>
                    <ul class="nav-list">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active-tab" : "")" asp-controller="Admin" asp-action="Index">Home</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" ? "active-tab" : "")" asp-controller="Account" asp-action="Users">User List</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active-tab" : "")" asp-controller="Courses" asp-action="Index">Courses</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Videos" ? "active-tab" : "")" asp-controller="Videos" asp-action="Index">Videos</a></li>
                        }
                        else if (User.Identity.IsAuthenticated && User.IsInRole("Partner"))
                        {
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Partner" ? "active-tab" : "")" asp-controller="Partner" asp-action="Index">Home</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cinemas" ? "active-tab" : "")" asp-controller="Cinemas" asp-action="Index">Classrooms</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Schedule" ? "active-tab" : "")" asp-controller="Schedule" asp-action="Index">Schedule</a></li>
                        }
                        else
                        {
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Learner" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-tab" : "")" asp-controller="Learner" asp-action="Index">Home</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Courses" ? "active-tab" : "")" asp-controller="Courses" asp-action="Index">Courses</a></li>
                            <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Learner" && ViewContext.RouteData.Values["action"]?.ToString() == "Classroom" ? "active-tab" : "")" asp-controller="Learner" asp-action="Classroom">Classroom</a></li>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Learner"))
                            {
                                <li>
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Schedule" ? "active-tab" : "")"
                                       asp-controller="Schedule" asp-action="Index">Schedule</a>
                                </li>

                            }
                            else
                            {
                                <li>
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active-tab" : "")"
                                       asp-controller="About" asp-action="Index">About</a>
                                </li>
                            }                            
                        }
                    </ul>
                    <div class="nav-actions">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                        <partial name="_Identity.cshtml" />
                    </div>
                </nav>
            </header>
        }

        <main class="flex-grow-1" style="margin-bottom: 0; padding-bottom: 0;">
            @RenderBody()

            <iframe id="chatbot-iframe" src="https://chat-bot-with-gemini-fe.onrender.com" style="position: fixed; bottom: 0; right: 0; width: 400px; height: 500px; border: none; z-index: 9999; border-radius: 12px;"></iframe>
        </main>
            @*Chat bot*@
            <iframe id="chatbot-iframe"
                    src="https://chat-bot-with-gemini-fe.onrender.com"
                    style="position: fixed;
               bottom: 0;
               right: 0;
               width: 60px; /* chỉ hiển thị icon toggle */
               height: 60px;
               border: none;
               z-index: 9999;
               border-radius: 50%;
               overflow: hidden;">
            </iframe>
        </main> 

        @if (!hideFooter)
        {
            <footer class="footer text-muted text-center">
                <div class="container">
                    &copy; NihongoSekai - Development Team
                </div>
            </footer>
        }
    </div>
    <script>
        window.addEventListener("message", function (event) {
            if (!event.data || typeof event.data !== "object") return;

            const iframe = document.getElementById("chatbot-iframe");
            if (!iframe) return;

            if (event.data.type === "chatbot-open") {
                iframe.style.width = "400px";
                iframe.style.height = "500px";
                iframe.style.borderRadius = "12px";
            } else if (event.data.type === "chatbot-close") {
                iframe.style.width = "60px";
                iframe.style.height = "60px";
                iframe.style.borderRadius = "12px";
            }
        }, false);
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
