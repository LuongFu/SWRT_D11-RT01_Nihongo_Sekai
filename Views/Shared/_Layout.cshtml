@{
    var hideNavbar = ViewData["HideNavbar"] as bool? ?? false;
    var hideFooter = ViewData["HideFooter"] as bool? ?? false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NihongoSekai</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/png" href="~/logo/LogoNihongoSekaiPNGBackground.png" />

    @RenderSection("Styles", required: false)
</head>

<body class="@(ViewData["LockScroll"] as bool? == true ? "home-lock-scroll" : "")">
    <div class="d-flex flex-column min-vh-100">
        @if (!hideNavbar)
        {
            <header class="header">
                <nav class="navbar">
                    <div class="container">
                        <div class="nav-brand">
                            <a asp-controller="Learner" asp-action="Index" class="brand-link">
                                <span class="brand-icon">日</span>
                                <span class="brand-text">
                                    <span class="brand-nihongo">Nihongo</span>
                                    <span class="brand-sekai">Sekai</span>
                                </span>
                            </a>
                        </div>

                        <div class="nav-menu" id="navMenu">
                            <ul class="nav-list">
                                <li><a asp-controller="Learner" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">Home</a></li>
                                <li><a asp-controller="Courses" asp-action="Index" class="nav-link">Courses</a></li>
                                <li><a asp-controller="Classroom" asp-action="Index" class="nav-link">Classrooms</a></li>
                            </ul>
                        </div>

                        <div class="nav-actions d-flex align-items-center gap-3">
                            <partial name="_Identity.cshtml" />
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline">Sign In</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Get Started</a>
                            @await Component.InvokeAsync("ShoppingCartSummary")
                            
                        </div>

                        <button class="nav-toggle" id="navToggle">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                </nav>
            </header>
        }

        <main class="flex-grow-1" style="margin-bottom: 0; padding-bottom: 0;">
            @RenderBody()
            <iframe id="chatbot-iframe" src="https://chat-bot-with-gemini-fe.onrender.com" style="position: fixed; bottom: 0; right: 0; width: 400px; height: 500px; border: none; z-index: 9999; border-radius: 12px;"></iframe>
        </main>

        @if (!hideFooter)
        {
            <footer class="footer text-muted text-center">
                <div class="container">
                    <div class="footer-content">
                        <div class="footer-section">
                            <div class="footer-brand">
                                <span class="brand-icon">日</span>
                                <span class="brand-text">Nihongo Sekai</span>
                            </div>
                            <p class="footer-description">
                                Master Japanese through immersive conversations, cultural insights, and personalized learning paths with native speakers.
                            </p>
                            <div class="social-links">
                                <a href="#" class="social-link">🌐</a>
                                <a href="#" class="social-link">🐦</a>
                                <a href="#" class="social-link">📸</a>
                            </div>
                        </div>

                        <div class="footer-section">
                            <h4 class="footer-title">Learning</h4>
                            <ul class="footer-links">
                                <li><a href="/Courses">Courses</a></li>
                                <li><a href="/Classroom">Classrooms</a></li>
                                <li><a href="/Partners">Partners</a></li>
                                <li><a href="#">Pricing</a></li>
                            </ul>
                        </div>

                        <div class="footer-section">
                            <h4 class="footer-title">Support</h4>
                            <ul class="footer-links">
                                <li><a href="#">Help Center</a></li>
                                <li><a href="#">Contact Us</a></li>
                                <li><a href="#">Community</a></li>
                                <li><a href="#">Blog</a></li>
                            </ul>
                        </div>

                        <div class="footer-section">
                            <h4 class="footer-title">Company</h4>
                            <ul class="footer-links">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Careers</a></li>
                                <li><a href="#">Press</a></li>
                                <li><a href="#">Partners</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="footer-bottom">
                        <p>© 2025 Nihongo Sekai. All rights reserved.</p>
                        <div class="footer-bottom-links">
                            <a href="#">Privacy Policy</a>
                            <a href="#">Terms of Service</a>
                            <a href="#">Cookie Policy</a>
                        </div>
                    </div>
                </div>
            </footer>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
