@{
    Layout = "_Layout";
    ViewData["Title"] = "Báo chí & Truyền thông";
}

@section Head {
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Báo chí & Truyền thông</title>
    <meta name="description"
          content="Tài nguyên dành cho nhà báo, blogger và chuyên gia truyền thông về Nihongo Sekai. Tải bộ Media Kit, thông cáo báo chí, thông tin công ty và tài sản chất lượng cao cho tin tức." />
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/press.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
}

<main>
    <!-- BEGIN: Development Banner -->
    <section class="dev-banner d-flex align-items-center">
        <div class="container d-flex align-items-center">
            <img src="https://img.icons8.com/ios-filled/80/000000/robot.png"
                 alt="Robot đang xây dựng"
                 class="me-3 dev-banner-icon" />
            <div>
                <h4 class="dev-banner-title mb-1">🔧 Tính năng đang phát triển</h4>
                <p class="dev-banner-text mb-0">
                    Trang này hiện vẫn đang trong giai đoạn phát triển và nội dung chỉ mang tính <em>placeholder</em>.
                    Cảm ơn bạn đã kiên nhẫn, chúng tôi sẽ cập nhật sớm!
                </p>
            </div>
        </div>
    </section>

    <!-- Phần Hero -->
    <section class="press-hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Báo chí & Truyền thông</h1>
                <p class="hero-description">
                    Tài nguyên dành cho nhà báo, blogger và chuyên gia truyền thông
                    khi đưa tin về Nihongo Sekai. Tải bộ Media Kit, truy cập
                    tài sản chất lượng cao và cập nhật thông tin công ty mới nhất.
                </p>
                <div class="hero-actions">
                    <button class="btn btn-primary" onclick="downloadMediaKit()">
                        Tải Media Kit
                    </button>
                    <a asp-controller="SidePages"
                       asp-action="Contact" class="btn btn-outline">Liên hệ Nhóm Báo chí</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Thông tin nhanh -->
    <section class="facts-section">
        <div class="container">
            <h2 class="section-title">Tổng quan về Công ty</h2>
            <div class="facts-grid">
                <div class="fact-card">
                    <div class="fact-number">50,000+</div>
                    <div class="fact-label">Học viên toàn cầu</div>
                </div>
                <div class="fact-card">
                    <div class="fact-number">200+</div>
                    <div class="fact-label">Giáo viên chuyên gia</div>
                </div>
                <div class="fact-card">
                    <div class="fact-number">2018</div>
                    <div class="fact-label">Thành lập tại Tokyo</div>
                </div>
                <div class="fact-card">
                    <div class="fact-number">120+</div>
                    <div class="fact-label">Quốc gia phục vụ</div>
                </div>
                <div class="fact-card">
                    <div class="fact-number">95%</div>
                    <div class="fact-label">Tỉ lệ thành công của học viên</div>
                </div>
                <div class="fact-card">
                    <div class="fact-number">$15M</div>
                    <div class="fact-label">Vòng gọi vốn Series A</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Thông cáo báo chí -->
    <section class="news-section">
        <div class="container">
            <h2 class="section-title">Thông cáo Báo chí Gần đây</h2>
            <div class="news-grid">
                <article class="news-item featured">
                    <div class="news-date">15 Tháng Ba, 2024</div>
                    <h3 class="news-title">
                        Nihongo Sekai công bố gọi vốn Series A trị giá 15 triệu USD
                    </h3>
                    <p class="news-excerpt">
                        Công ty EdTech hàng đầu Nihongo Sekai huy động thành công
                        vòng Series A để mở rộng nền tảng học tiếng Nhật AI toàn cầu,
                        với sự góp mặt của các quỹ đầu tư uy tín Nhật Bản và Thung lũng Silicon.
                    </p>
                    <div class="news-tags">
                        <span class="news-tag">Gọi vốn</span>
                        <span class="news-tag">Tăng trưởng</span>
                    </div>
                    <button class="btn btn-outline"
                            onclick="readPressRelease('series-a')">
                        Đọc thông cáo
                    </button>
                </article>

                <article class="news-item">
                    <div class="news-date">28 Tháng Hai, 2024</div>
                    <h3 class="news-title">
                        Hợp tác với Quỹ Văn hóa Nhật Bản cho Chương trình Trao đổi Văn hóa
                    </h3>
                    <p class="news-excerpt">
                        Nihongo Sekai hợp tác với Quỹ Văn hóa Nhật Bản để ra mắt
                        chương trình trao đổi văn hóa toàn diện kết nối học viên quốc tế
                        với văn hóa Nhật Bản.
                    </p>
                    <div class="news-tags">
                        <span class="news-tag">Hợp tác</span>
                        <span class="news-tag">Văn hóa</span>
                    </div>
                    <button class="btn btn-outline"
                            onclick="readPressRelease('japan-foundation')">
                        Xem chi tiết
                    </button>
                </article>

                <article class="news-item">
                    <div class="news-date">20 Tháng Một, 2024</div>
                    <h3 class="news-title">
                        Nihongo Sekai đoạt giải “Nền tảng Học ngôn ngữ tốt nhất”
                    </h3>
                    <p class="news-excerpt">
                        Nền tảng được vinh danh nhờ đổi mới trong trải nghiệm văn hóa và
                        học tập cá nhân hóa tại Giải thưởng EdTech Excellence 2024 ở
                        San Francisco.
                    </p>
                    <div class="news-tags">
                        <span class="news-tag">Giải thưởng</span>
                        <span class="news-tag">Vinh danh</span>
                    </div>
                    <button class="btn btn-outline"
                            onclick="readPressRelease('edtech-award')">
                        Xem chi tiết
                    </button>
                </article>

                <article class="news-item">
                    <div class="news-date">10 Tháng Mười Hai, 2023</div>
                    <h3 class="news-title">Chạm mốc 50,000 học viên</h3>
                    <p class="news-excerpt">
                        Nihongo Sekai ăn mừng cột mốc 50,000 học viên hoạt động
                        trên toàn cầu, minh chứng nhu cầu học tiếng Nhật chất lượng cao tăng mạnh.
                    </p>
                    <div class="news-tags">
                        <span class="news-tag">Cột mốc</span>
                        <span class="news-tag">Tăng trưởng</span>
                    </div>
                    <button class="btn btn-outline"
                            onclick="readPressRelease('50k-milestone')">
                        Xem chi tiết
                    </button>
                </article>
            </div>
        </div>
    </section>

