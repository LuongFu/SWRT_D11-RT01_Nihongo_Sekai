                        <div class="contact-details">
                            <div class="contact-item">
                                <strong>Email:</strong> partnerships@nihongosekai.com
                            </div>
                            <div class="contact-item">
                                <strong>Điện thoại:</strong> +1 (555) 123-4568
                            </div>
                            <div class="contact-item">
                                <strong>Phạm vi:</strong> Hợp tác chiến lược và liên kết
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/js/press.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        function downloadMediaKit() {
            showToast('Bắt đầu tải bộ tài liệu truyền thông. Vui lòng kiểm tra thư mục Tải xuống của bạn.', 'success');
        }
        function downloadAsset(assetType) {
            showToast(`Bắt đầu tải xuống tài nguyên: ${assetType}.`, 'success');
        }
        function readPressRelease(releaseId) {
            showToast(`Đang mở thông cáo báo chí: ${releaseId}`, 'info');
        }
    </script>
}