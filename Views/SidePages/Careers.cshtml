@{
    ViewData["Title"] = "Tuyển dụng - Nihongo Sekai";
}

@section Head {
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
          content="Tham gia đội ngũ Nihongo Sekai. Khám phá cơ hội nghề nghiệp, văn hóa công ty và quyền lợi. Cùng chúng tôi kết nối văn hóa qua giáo dục tiếng Nhật." />
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/careers.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <!-- Favicon -->
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎌</text></svg>" />
}

<main>
    <!-- Phần Hero Tuyển dụng -->
    <section class="careers-hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Xây dựng Tương lai của
                    <span class="text-gradient">Giáo dục tiếng Nhật</span>
                </h1>
                <p class="hero-description">
                    Tham gia đội ngũ giàu đam mê bao gồm nhà giáo dục, chuyên gia công nghệ và cầu nối văn hóa.
                    Giúp chúng tôi kết nối người học toàn cầu với vẻ đẹp của ngôn ngữ và văn hóa Nhật Bản.
                </p>
                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">50+</div>
                        <div class="stat-label">Thành viên đội ngũ</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">15+</div>
                        <div class="stat-label">Vị trí tuyển dụng</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">2</div>
                        <div class="stat-label">Văn phòng</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tại sao làm việc với chúng tôi -->
    <section class="why-work-section">
        <div class="container">
            <h2 class="section-title">Tại sao chọn chúng tôi</h2>
            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">💡</div>
                    <h3 class="benefit-title">Đổi mới & Tác động</h3>
                    <p class="benefit-description">
                        Tham gia phát triển giải pháp EdTech đột phá, ảnh hưởng đến hàng ngàn người học.
                        Ý tưởng và đóng góp của bạn trực tiếp định hình cách mọi người học tiếng Nhật.
                    </p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">🌍</div>
                    <h3 class="benefit-title">Văn hóa Toàn cầu & Từ xa</h3>
                    <p class="benefit-description">
                        Làm việc linh hoạt từ bất cứ đâu. Đội ngũ của chúng tôi trải dài qua nhiều múi giờ,
                        cùng chung sứ mệnh kết nối văn hóa qua giáo dục.
                    </p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">📚</div>
                    <h3 class="benefit-title">Học tập Liên tục</h3>
                    <p class="benefit-description">
                        Ngân sách học tập 2.000$ mỗi năm, tham gia hội thảo, truy cập mọi khóa học.
                        Phát triển chuyên môn trong khi nuôi dưỡng sự tò mò.
                    </p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">🏥</div>
                    <h3 class="benefit-title">Quyền lợi Toàn diện</h3>
                    <p class="benefit-description">
                        Bảo hiểm y tế, nha khoa, thị lực; hỗ trợ sức khỏe tinh thần, gym;
                        4 tuần nghỉ có lương cộng ngày lễ.
                    </p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">🎌</div>
                    <h3 class="benefit-title">Đắm mình Văn hóa</h3>
                    <p class="benefit-description">
                        Chuyến đi Nhật hàng năm, chương trình trao đổi văn hóa,
                        cơ hội trải nghiệm văn hóa Nhật cùng đội ngũ địa phương.
                    </p>
                </div>

                <div class="benefit-card">
                    <div class="benefit-icon">💰</div>
                    <h3 class="benefit-title">Mức lương Cạnh tranh</h3>
                    <p class="benefit-description">
                        Lương thị trường, cổ phần, thưởng hiệu suất,
                        hỗ trợ lập kế hoạch hưu trí.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Vị trí Tuyển dụng -->
    <section class="positions-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Vị trí Mở</h2>
                <p class="section-subtitle">
                    Tìm cơ hội tiếp theo để tạo ảnh hưởng toàn cầu trong lĩnh vực giáo dục
                </p>
            </div>

            <div class="position-filters">
                <button class="filter-btn active" data-category="all">Tất cả</button>
                <button class="filter-btn" data-category="engineering">Kỹ thuật</button>
                <button class="filter-btn" data-category="education">Giáo dục</button>
                <button class="filter-btn" data-category="design">Thiết kế</button>
                <button class="filter-btn" data-category="marketing">Marketing</button>
                <button class="filter-btn" data-category="operations">Vận hành</button>
            </div>

            <div class="positions-grid" id="positionsGrid">
                <!-- Danh sách vị trí sẽ được tải động -->
            </div>
        </div>
    </section>

    <!-- Văn hóa & Giá trị -->
    <section class="culture-section">
        <div class="container">
            <div class="culture-content">
                <div class="culture-text">
                    <h2 class="section-title">Văn hóa & Giá trị</h2>
                    <p class="culture-description">
                        Chúng tôi tạo môi trường toàn diện để mọi người phát triển.
                        Giá trị của chúng tôi định hướng cách làm việc và cách phục vụ cộng đồng toàn cầu.
                    </p>

                    <div class="values-list">
                        <div class="value-item">
                            <div class="value-icon">🤝</div>
                            <div class="value-content">
                                <h4>Tôn trọng & Hòa nhập</h4>
                                <p>
                                    Tôn vinh sự đa dạng, tạo cảm giác thuộc về cho tất cả,
                                    đón nhận quan điểm và nền tảng khác nhau.
                                </p>
                            </div>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">🎯</div>
                            <div class="value-content">
                                <h4>Ưu tiên Học viên</h4>
                                <p>
                                    Mọi quyết định đều vì thành công và trải nghiệm học tập của học viên.
                                </p>
                            </div>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">🌱</div>
                            <div class="value-content">
                                <h4>Phát triển & Đổi mới</h4>
                                <p>
                                    Luôn cải tiến, thử nghiệm và học hỏi từ cả thành công lẫn thất bại.
                                </p>
                            </div>
                        </div>
                        <div class="value-item">
                            <div class="value-icon">🌸</div>
                            <div class="value-content">
                                <h4>Cầu nối Văn hóa</h4>
                                <p>
                                    Tôn trọng truyền thống Nhật Bản, xây dựng kết nối văn hóa qua giáo dục.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="culture-image">
                    <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=500&h=600&fit=crop"
                         alt="Văn hóa Đội ngũ" />
                </div>
            </div>
        </div>
    </section>

    <!-- Đánh giá từ Nhân viên -->
    <section class="testimonials-section">
        <div class="container">
            <h2 class="section-title">Lời Khen từ Đội ngũ</h2>
            <div class="testimonials-grid">
                <div class="testimonial-card">
                    <p class="testimonial-quote">
                        "Làm việc tại Nihongo Sekai rất ý nghĩa. Tôi kết hợp công nghệ và
                        tác động tích cực lên giáo dục. Đội ngũ luôn hỗ trợ và sứ mệnh là
                        điều tôi tin tưởng."
                    </p>
                    <div class="testimonial-author">
                        <img src="images/MKhoi.png" alt="Minh Khoi" />
                        <div class="author-info">
                            <div class="author-name">Minh Khoi</div>
                            <div class="author-role">Trưởng nhóm</div>
                        </div>
                    </div>
                </div>

                <div class="testimonial-card">
                    <p class="testimonial-quote">
                        "Cơ hội học tập ở đây tuyệt vời. Tôi không chỉ dạy tiếng Nhật mà
                        còn học về EdTech, thiết kế chương trình và làm việc với đội ngũ quốc tế."
                    </p>
                    <div class="testimonial-author">
                        <img src="images/MPhu.jpg" alt="Minh Phú" />
                        <div class="author-info">
                            <div class="author-name">Minh Phú</div>
                            <div class="author-role">Trưởng nhóm Phát triển</div>
                        </div>
                    </div>
                </div>

                <div class="testimonial-card">
                    <p class="testimonial-quote">
                        "Công ty thực sự sống với giá trị của mình. Hỗ trợ phát triển chuyên môn
                        thực tế - tôi đã tham dự hội thảo, học khóa mới và trải nghiệm khó quên."
                    </p>
                    <div class="testimonial-author">
                        <img src="images/VHoang.png" alt="Văn Hoàng" />
                        <div class="author-info">
                            <div class="author-name">Văn Hoàng</div>
                            <div class="author-role">Chủ biên Chương trình</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quy trình Ứng tuyển -->
    <section class="process-section">
        <div class="container">
            <h2 class="section-title">Quy trình Tuyển dụng</h2>
            <div class="process-timeline">
                <div class="process-step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3 class="step-title">Xét Hồ sơ</h3>
                        <p class="step-description">
                            Xem xét toàn diện trong 5 ngày làm việc.
                        </p>
                    </div>
                </div>
                <div class="process-step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3 class="step-title">Phỏng vấn Nhân sự</h3>
                        <p class="step-description">
                            Trao đổi 30 phút với HR về kinh nghiệm và nguyện vọng.
                        </p>
                    </div>
                </div>
                <div class="process-step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3 class="step-title">Bài tập kỹ năng</h3>
                        <p class="step-description">
                            Đánh giá chuyên môn qua bài tập thực tế.
                        </p>
                    </div>
                </div>
                <div class="process-step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h3 class="step-title">Phỏng vấn Nhóm</h3>
                        <p class="step-description">
                            Gặp gỡ đồng nghiệp tương lai, tìm hiểu văn hóa công ty.
                        </p>
                    </div>
                </div>
                <div class="process-step">
                    <div class="step-number">5</div>
                    <div class="step-content">
                        <h3 class="step-title">Quyết định Cuối cùng</h3>
                        <p class="step-description">
                            Thông báo trong một tuần và phản hồi chi tiết.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Đăng ký -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2 class="cta-title">Sẵn sàng tham gia sứ mệnh?</h2>
                <p class="cta-description">
                    Không tìm thấy vị trí phù hợp? Chúng tôi luôn chào đón những cá nhân tài năng
                    đam mê giáo dục và kết nối văn hóa.
                </p>
                <div class="cta-actions">
                    <a href="mailto:careers@nihongosekai.com" class="btn btn-primary">Gửi CV ngay</a>
                    <a href="~/SidePages/Contact" class="btn btn-outline">Liên hệ</a>
                </div>
            </div>
        </div>
    </section>
</main>

