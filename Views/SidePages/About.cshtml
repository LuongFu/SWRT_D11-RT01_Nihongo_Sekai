@{
    ViewData["Title"] = "Về Chúng Tôi - Nihongo Sekai";
}

@section Head {
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
          content="Tìm hiểu về sứ mệnh của Nihongo Sekai trong việc kết nối văn hóa qua việc học tiếng Nhật. Gặp gỡ đội ngũ của chúng tôi và khám phá câu chuyện của chúng tôi." />

    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>🎌</text></svg>" />
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&display=swap"
          rel="stylesheet" />
