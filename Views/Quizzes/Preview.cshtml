@using JapaneseLearningPlatform.Data.ViewModels
@model QuizPreviewVM
@{
    ViewData["Title"] = "Preview Q&A";
    var courseId = ViewData["CourseId"] as int? ?? 0;
}

<h2>Quiz Preview: @Model.QuizTitle</h2>

@for (int i = 0; i < Model.Questions.Count; i++)
{
    <div class="card mb-3">
        <div class="card-header">
            <strong>Question @(@i + 1):</strong> @Model.Questions[i].QuestionText
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var option in Model.Questions[i].Options)
            {
                <li class="list-group-item">@option.OptionText</li>
            }
        </ul>
    </div>
}

<a asp-action="Details" asp-controller="Courses" asp-route-id="@courseId" class="btn btn-secondary mt-3">← Back to Course</a>
