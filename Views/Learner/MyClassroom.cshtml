@{
    ViewData["Title"] = "Lớp học của tôi";
    ViewData["HideFooter"] = false;
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
}

<div class="container mt-4">
    <h2 class="mb-4">Lớp học của tôi</h2>

    <div class="row">
        <div class="col-md-8">
            <h4 class="mb-3">📅 Lịch học</h4>
            <div class="card shadow-sm p-3 mb-4 bg-light rounded">
                <p class="text-muted mb-0">Lịch sẽ được tải từ Google Calendar (tính năng đang cập nhật...)</p>
            </div>

            <h4 class="mb-3">📚 Nội dung lớp học</h4>
            <div class="card shadow-sm p-3 mb-4 bg-light rounded">
                <p class="text-muted mb-0">Tính năng sẽ sớm có. Hãy chờ đón!</p>
            </div>
        </div>
    </div>
</div>
