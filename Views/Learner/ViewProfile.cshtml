@model JapaneseLearningPlatform.Models.ApplicationUser
@{
    ViewData["Title"] = "Hồ sơ học viên";
    Layout = "_Layout";
}

<div class="container mt-5 profile-container">
    <div class="row">
        <!-- Bên trái -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm p-3 text-center">
                <!-- Ảnh đại diện -->
                <div class="d-flex justify-content-center">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? "/uploads/profile/default-img.jpg" : Model.ProfilePicturePath)"
                         class="rounded-circle img-thumbnail mb-3"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Ảnh đại diện" />
                </div>

                <!-- Tên người dùng -->
                <h5 class="fw-bold text-danger">@Model.FullName</h5>

                <!-- Vai trò -->
                <div class="mt-2">
                    <span class="badge bg-light text-dark border px-3 py-2">@Model.Role</span>
                </div>

                <!-- Nút quay lại lớp học -->
                <div class="mt-3 d-flex justify-content-center">
                    <a asp-action="Content"
                       asp-controller="ClassroomInstances"
                       asp-route-id="@ViewBag.ClassroomId"
                       class="btn btn-secondary btn-sm">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại lớp học
                    </a>
                </div>
            </div>
        </div>

        <!-- Bên phải -->
        <div class="col-md-8">
            <!-- Thông tin người dùng -->
            <div class="card shadow-sm p-4 mb-4">
                <h4 class="fw-bold mb-3 text-danger">Thông tin người dùng</h4>
                <p><strong>Họ và tên:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Số điện thoại:</strong> @(Model.PhoneNumber ?? "-")</p>
                <p><strong>Địa chỉ:</strong> @(Model.Address ?? "-")</p>
                <p><strong>Ngày sinh:</strong> @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</p>
                <p><strong>Giới tính:</strong> @(Model.Gender ?? "-")</p>
                <p><strong>Mô tả:</strong> @(Model.Description ?? "-")</p>

                <!-- Liên kết mạng xã hội -->
                <div class="row mb-2 align-items-center">
                    <div class="col-3 fw-bold">Facebook:</div>
                    <div class="col text-start">
                        @if (!string.IsNullOrWhiteSpace(Model.Facebook))
                        {
                            <a href="@Model.Facebook" target="_blank" class="btn btn-primary btn-sm social-btn"
                               style="background-color:#1877F2; border:none; width:130px;">
                                <i class="bi bi-facebook"></i> Facebook
                            </a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </div>
                </div>

                <div class="row mb-2 align-items-center">
                    <div class="col-3 fw-bold">YouTube:</div>
                    <div class="col text-start">
                        @if (!string.IsNullOrWhiteSpace(Model.YouTube))
                        {
                            <a href="@Model.YouTube" target="_blank" class="btn btn-danger btn-sm social-btn"
                               style="background-color:#FF0000; border:none; width:130px;">
                                <i class="bi bi-youtube"></i> YouTube
                            </a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
