@model JapaneseLearningPlatform.Models.ApplicationUser

@{
    ViewData["Title"] = "Hồ sơ của tôi";
    Layout = "_Layout";
}

<div class="container mt-5 profile-container">
    <div class="row">
        <!-- Bên trái -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm p-3 text-center">
                <!-- Ảnh đại diện -->
                <div class="d-flex justify-content-center">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? "/uploads/profile/default-img.jpg" : Model.ProfilePicturePath)"
                         class="rounded-circle img-thumbnail mb-3"
                         style="width: 150px; height: 150px; object-fit: cover;"
                         alt="Ảnh đại diện" />
                </div>

                <!-- Tên người dùng -->
                <h5 class="fw-bold" style="color:#b30000;">@Model.FullName</h5>

                <!-- Vai trò -->
                <span class="badge bg-light text-dark border">@Model.Role</span>

                <!-- Nút hành động -->
                <div class="d-grid gap-2 mt-3">
                    <a class="btn btn-danger" asp-controller="Learner" asp-action="EditProfile">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa hồ sơ
                    </a>
                    <a class="btn btn-outline-danger" asp-controller="Learner" asp-action="ChangePassword">
                        <i class="bi bi-lock"></i> Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>

        <!-- Bên phải -->
        <div class="col-md-8">
            <!-- Thông tin người dùng -->
            <div class="card shadow-sm p-4 mb-4">
                <h4 class="fw-bold mb-3" style="color:#b30000;">Thông tin người dùng</h4>
                <p><strong>Họ và tên:</strong> @Model.FullName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Số điện thoại:</strong> @(Model.PhoneNumber ?? "-")</p>
                <p><strong>Địa chỉ:</strong> @(Model.Address ?? "-")</p>
                <p><strong>Ngày sinh:</strong> @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</p>
                <p><strong>Giới tính:</strong> @(Model.Gender ?? "-")</p>
                <p><strong>Mô tả:</strong> @(Model.Description ?? "-")</p>

                <!-- Liên kết mạng xã hội -->
                <div class="row mb-2 align-items-center">
                    <div class="col-2 fw-bold">Facebook:</div>
                    <div class="col">
                        @if (!string.IsNullOrWhiteSpace(Model.Facebook))
                        {
                            <a href="@Model.Facebook" target="_blank" class="btn btn-primary btn-sm social-btn"
                               style="background-color:#1877F2; border:none; width:150px;">
                                <i class="bi bi-facebook"></i> Facebook
                            </a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </div>
                </div>

                <div class="row mb-2 align-items-center">
                    <div class="col-2 fw-bold">YouTube:</div>
                    <div class="col">
                        @if (!string.IsNullOrWhiteSpace(Model.YouTube))
                        {
                            <a href="@Model.YouTube" target="_blank" class="btn btn-danger btn-sm social-btn"
                               style="background-color:#FF0000; border:none; width:150px;">
                                <i class="bi bi-youtube"></i> YouTube
                            </a>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
