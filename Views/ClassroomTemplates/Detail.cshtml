@using JapaneseLearningPlatform.Data.ViewModels
@model ClassroomTemplateVM

@{
    ViewData["Title"] = "Chi tiết mẫu lớp";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Chi tiết mẫu lớp</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="card-title mb-2">@Model.Title</h4>
            <p class="card-text">@Model.Description</p>

            <p><strong>Trình độ:</strong> @Model.LanguageLevel</p>

            @* Nếu có tài liệu thì hiển thị *@
            @if (!string.IsNullOrEmpty(Model.DocumentURL))
            {
                <p>
                    <strong>Tài liệu đính kèm:</strong>
                    <a href="@Model.DocumentURL" target="_blank" class="btn btn-outline-primary btn-sm ms-2">
                        <i class="bi bi-file-earmark-text me-1"></i> Xem tài liệu
                    </a>
                </p>
            }
        </div>

        <div class="card-footer bg-transparent border-0 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square me-1"></i> Sửa
            </a>
            <a asp-action="MyTemplate" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>
</div>
