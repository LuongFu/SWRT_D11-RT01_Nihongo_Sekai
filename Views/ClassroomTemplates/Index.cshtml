@model IEnumerable<JapaneseLearningPlatform.Data.ViewModels.ClassroomTemplateVM>
@{
    ViewData["Title"] = "My Templates";
}

<h2>My Templates</h2>
<a class="btn btn-primary mb-3" asp-action="Create">+ Create New Template</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Level</th>
            <th>Price</th>
            <th>Start - End</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.LanguageLevel</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>