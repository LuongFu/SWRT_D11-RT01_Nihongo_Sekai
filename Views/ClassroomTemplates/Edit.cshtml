@model JapaneseLearningPlatform.Data.ViewModels.ClassroomTemplateVM
@using JapaneseLearningPlatform.Data.Enums

@{
    ViewData["Title"] = "Edit Template";
}

<h2>Edit Template</h2>

<form asp-action="EditTemplate" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        <img src="@Model.ImageURL" class="img-thumbnail mb-2" style="max-width: 200px;" />
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LanguageLevel"></label>
        <select asp-for="LanguageLevel" asp-items="Html.GetEnumSelectList<LanguageLevel>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="SessionTime"></label>
        <input asp-for="SessionTime" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <input type="submit" value="Update" class="btn btn-success" />
</form>
