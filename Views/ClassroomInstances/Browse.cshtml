@using JapaneseLearningPlatform.Data.ViewModels
@model IEnumerable<ClassroomInstanceVM>

@{
    ViewData["Title"] = "Explore Classes";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-center">Explore Available Classes</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    No classes are currently available.
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        @if (!string.IsNullOrEmpty(item.TemplateImageURL))
                        {
                            <img src="@item.TemplateImageURL" class="card-img-top" alt="@item.TemplateTitle" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white text-center d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-easel" style="font-size: 2rem;"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.TemplateTitle</h5>
                            <p class="card-text">
                                <strong>Schedule:</strong> @item.StartDate.ToString("yyyy-MM-dd") → @item.EndDate.ToString("yyyy-MM-dd")<br />
                                <strong>Time:</strong> @item.SessionDurationHours giờ<br />
                                <strong>Status:</strong> @item.Status.ToString()<br />
                                <strong>Price:</strong> @(item.IsPaid? item.Price.ToString("C0") : "Free")<br />
                                <strong>Enrolled:</strong> @item.EnrollmentCount
                            </p>

                            <div class="mt-auto">
                                @if (!item.IsEnrolled)
                                {
                                    <form asp-action="JoinClassroom" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-person-plus"></i> Join Class
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-info-circle"></i> View Details
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
