@using JapaneseLearningPlatform.Data.Enums
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
    ViewData["HideNavbar"] = false;
    ViewData["HideFooter"] = false;
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <style>
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
            background: #f8f9fe;
        }

        .admin-sidebar {
            width: 250px;
            min-height: 100vh;
            background: linear-gradient(87deg, #f5365c 0, #f56036 100%) !important;
            color: white;
            overflow-y: auto;
            flex-shrink: 0;
            transition: width 0.3s ease;
        }

            .admin-sidebar.collapsed {
                width: 70px;
            }

            .admin-sidebar .nav-text {
                transition: opacity 0.2s, visibility 0.2s;
                white-space: nowrap;
            }

            .admin-sidebar.collapsed .nav-text {
                opacity: 0;
                visibility: hidden;
                width: 0;
                display: inline-block;
            }

            .admin-sidebar.collapsed .nav-link {
                text-align: center;
            }

        #sidenav-main .nav-link.active {
            background-color: rgba(255,255,255,0.15);
            border-radius: 0.5rem;
            font-weight: 600;
        }

        .sidenav .nav-link {
            padding: 0.75rem 1rem;
        }

        .admin-main {
            flex-grow: 1;
            padding: 2rem;
            transition: margin-left 0.3s;
        }
    </style>
}

<div class="admin-wrapper">

    <div class="admin-main">


        <h1 class="mb-4">Admin Dashboard</h1>

        <!-- Dashboard Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card p-3 shadow rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Total Users</p>
                            <h5 class="mb-0">@ViewBag.TotalUsers</h5>
                        </div>
                        <i class="bi bi-people-fill fs-2 text-danger"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Orders</p>
                            <h5 class="mb-0">@ViewBag.TotalOrders</h5>
                        </div>
                        <i class="bi bi-cart-check-fill fs-2 text-info"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Revenue</p>
                            <h5 class="mb-0">$@ViewBag.TotalRevenue.ToString("N2")</h5>
                        </div>
                        <i class="bi bi-currency-dollar fs-2 text-success"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 shadow rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1">Classrooms</p>
                            <h5 class="mb-0">@ViewBag.TotalClassrooms</h5>
                        </div>
                        <i class="bi bi-mortarboard-fill fs-2 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card p-3 shadow rounded">
                    <h6>Sales Value</h6>
                    <canvas id="salesChart" height="200"></canvas>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3 shadow rounded">
                    <h6>Total Orders</h6>
                    <canvas id="ordersChart" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="card mt-4 shadow-sm">
            <div class="card-header bg-white fw-bold">
                Recent Orders
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User Email</th>
                            <th>Order Date</th>
                            <th>Total</th>
                            <th>#Courses</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in (List<Order>)ViewBag.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Email</td>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>$@order.TotalAmount</td>
                                <td>@order.OrderItems.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    

    <canvas id="revenueByCategoryChart" height="100"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const salesCtx = document.getElementById('salesChart')?.getContext('2d');
            const ordersCtx = document.getElementById('ordersChart')?.getContext('2d');

            if (!salesCtx || !ordersCtx) {
                console.warn("Canvas elements not found. Skipping chart rendering.");
                return;
            }

            new Chart(salesCtx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.MonthLabels)),
                    datasets: [{
                        label: 'Revenue',
                        data: @Html.Raw(Json.Serialize(ViewBag.MonthlyRevenue)),
                        borderColor: '#f5365c',
                        backgroundColor: 'rgba(245, 54, 92, 0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 100,
                                callback: function (value) {
                                    return `$${value}`;
                                }
                            }
                        }
                    }
                }
            });

            new Chart(ordersCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(ViewBag.MonthLabels)),
                    datasets: [{
                        label: 'Orders',
                        data: @Html.Raw(Json.Serialize(ViewBag.MonthlyOrders)),
                        backgroundColor: '#f5365c'
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 10,
                                precision: 0,
                                callback: function (value) {
                                    return Number.isInteger(value) ? value : '';
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
