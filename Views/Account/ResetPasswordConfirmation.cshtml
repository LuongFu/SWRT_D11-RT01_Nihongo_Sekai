@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
          rel="stylesheet" />

    <style>
        body {
            background: #f8f2f0;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .reset-success-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
            padding: 2rem;
        }

        .reset-card {
            background: #fff;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,0.06);
            max-width: 480px;
            width: 100%;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .reset-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            }

            .reset-card .card-body {
                padding: 2rem;
                text-align: center;
            }

            .reset-card h4 {
                font-size: 1.5rem;
                font-weight: 600;
                color: #2d2d2d;
                margin-bottom: 1.25rem;
            }

            .reset-card p {
                color: #555;
                margin-bottom: 1.5rem;
            }

        .btn-login {
            padding: .75rem 1.75rem;
            font-weight: 600;
            border-radius: 2rem;
            background: linear-gradient(135deg, #e53935 0%, #b71c1c 100%);
            border: none;
            color: #fff;
            transition: background .3s ease, transform .2s ease;
        }

            .btn-login:hover {
                background: linear-gradient(135deg, #d32f2f 0%, #8e0000 100%);
                transform: translateY(-2px);
            }
    </style>
}

<div class="reset-success-wrapper">
    <div class="card reset-card">
        <div class="card-body">
            <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #e53935;"></i>
            <h4>Mật khẩu đã được đặt lại thành công!</h4>
            <p>Bạn có thể sử dụng mật khẩu mới để đăng nhập ngay bây giờ.</p>
            <a href="@Url.Action("Login", "Account")" class="btn btn-login">
                <i class="bi bi-box-arrow-in-right me-2"></i> Đến trang Đăng nhập
            </a>
        </div>
    </div>
</div>
