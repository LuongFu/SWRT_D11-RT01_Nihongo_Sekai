@{
    ViewData["Title"] = "Đã gửi liên kết xác nhận";
    ViewData["HideNavbar"] = true;   // ẩn navbar nếu cần
    ViewData["HideFooter"] = true;   // ẩn footer nếu cần
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
          rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Source Sans Pro', sans-serif;
            background: #f7d7d7;
        }

        .confirmation-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 0 1rem;
        }

        .confirmation-card {
            background: #fff;
            padding: 2rem;
            border-radius: 1rem;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .confirmation-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 40px rgba(0,0,0,0.12);
            }

            .confirmation-card h2 {
                color: #2e7d32;
                font-size: 1.75rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

            .confirmation-card p {
                color: #555;
                margin-bottom: 1.5rem;
                line-height: 1.5;
            }

        .btn-home {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border: 2px solid #1565c0;
            border-radius: 2rem;
            color: #1565c0;
            font-weight: 600;
            text-decoration: none;
            transition: background .2s, color .2s, transform .2s;
        }

            .btn-home:hover {
                background: #1565c0;
                color: #fff;
                transform: translateY(-2px);
            }
    </style>
}

<div class="confirmation-wrapper">
    <div class="confirmation-card">
        <h2>Liên kết đặt lại đã được gửi!</h2>
        <p>
            Hãy kiểm tra email của bạn (cả mục Spam) để nhận liên kết đặt lại mật khẩu.
        </p>
        <a asp-controller="Home" asp-action="Index" class="btn-home">
            <i class="bi bi-house-door me-1"></i> Về trang chủ
        </a>
    </div>
</div>
