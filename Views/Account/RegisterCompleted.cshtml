@{
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
          rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Source Sans Pro', sans-serif;
            background: #f7f0ef; /* Màu nền nhẹ nhàng */
        }

        .success-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 1rem;
        }

        .success-card {
            background: #fff;
            padding: 2.5rem 2rem;
            border-radius: 1rem;
            box-shadow: 0 12px 32px rgba(0,0,0,0.08);
            max-width: 480px;
            width: 100%;
            text-align: center;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .success-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 48px rgba(0,0,0,0.1);
            }

        .success-icon {
            font-size: 4rem;
            color: #d32f2f; /* đỏ theo văn hóa Nhật */
        }

        .success-card h2 {
            margin-top: 1rem;
            font-weight: 700;
            color: #333;
            font-size: 1.75rem;
        }

        .success-card p {
            color: #555;
            margin: 1rem 0 1.5rem;
            line-height: 1.5;
        }

        .btn-login {
            display: inline-flex;
            align-items: center;
            gap: .5rem;
            padding: .75rem 1.5rem;
            border: 2px solid #d32f2f;
            border-radius: 2rem;
            background: transparent;
            color: #d32f2f;
            font-weight: 600;
            text-decoration: none;
            transition: background .2s, color .2s, transform .2s;
        }

            .btn-login:hover {
                background: #d32f2f;
                color: #fff;
                transform: translateY(-2px);
            }
    </style>
}

<div class="success-wrapper">
    <div class="success-card">
        <i class="bi bi-check-circle-fill success-icon"></i>
        <h2>Tạo tài khoản thành công!</h2>
        <p>
            Cảm ơn bạn đã đăng ký. Để kích hoạt tài khoản, vui lòng kiểm tra email và nhấp vào liên kết xác thực (bao gồm cả thư mục Spam).
        </p>
        <a asp-controller="Account"
           asp-action="Login"
           class="btn-login">
            <i class="bi bi-box-arrow-in-right"></i>
            Quay về Đăng nhập
        </a>
    </div>
</div>
