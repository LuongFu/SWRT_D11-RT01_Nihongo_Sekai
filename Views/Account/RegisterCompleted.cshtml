@{
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 shadow-lg p-5 rounded-4 bg-white text-center">
        <div class="mb-4">
            <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #28a745;"></i>
            <h2 class="mt-3 fw-bold">Tạo tài khoản thành công!</h2>
            <p class="text-muted">
                Để tiếp tục, vui lòng vào email và xác thực liên kết
                <a href="https://mail.google.com/mail/u/0/#inbox">thư</a>.
            </p>
        </div>
        <hr />
        <p class="mb-4">Cảm ơn bạn đã tham gia cùng chúng tôi!</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-success px-4 py-2">
            <i class="bi bi-box-arrow-in-right"></i> Quay về trang đăng nhập
        </a>
    </div>
</div>
