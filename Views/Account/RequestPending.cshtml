@{
    ViewData["Title"] = "Partner Application Submitted";
    Layout = "_Layout";
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
          rel="stylesheet" />

    <style>
        body {
            background: #f4f7f9;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .thankyou-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 80vh;
            padding: 2rem 0;
        }

        .thankyou-card {
            background: #fff;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 12px 32px rgba(0,0,0,0.08);
            max-width: 500px;
            width: 100%;
            transition: transform .2s ease, box-shadow .2s ease;
        }

            .thankyou-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 16px 48px rgba(0,0,0,0.1);
            }

            .thankyou-card .card-body {
                padding: 2.5rem;
                text-align: center;
            }

            .thankyou-card .card-title {
                font-size: 1.75rem;
                font-weight: 700;
                color: #2d2d2d;
                margin-bottom: 1rem;
            }

            .thankyou-card .card-text {
                color: #555;
                line-height: 1.6;
            }

        .btn-home {
            margin-top: 1.5rem;
            padding: .75rem 1.5rem;
            font-weight: 600;
            border-radius: 2rem;
            border: none;
            background: linear-gradient(135deg, #e53935 0%, #d32f2f 100%);
            color: #fff;
            transition: background .3s ease, transform .2s ease;
        }

            .btn-home:hover {
                background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
                transform: translateY(-2px);
            }
    </style>
}

<div class="thankyou-wrapper">
    <div class="card thankyou-card">
        <div class="card-body">
            <h2 class="card-title">Cảm ơn bạn đã nộp đơn!</h2>
            <p class="card-text">
                Đơn ứng tuyển đối tác của bạn đã được tiếp nhận thành công.<br />
                Chúng tôi sẽ xem xét và thông báo qua email cho bạn trong vòng <strong>24 giờ</strong>.
            </p>
            <a asp-action="Login" class="btn btn-home">
                <i class="bi bi-box-arrow-in-right me-2"></i>
                Quay về Đăng nhập
            </a>
        </div>
    </div>
</div>
