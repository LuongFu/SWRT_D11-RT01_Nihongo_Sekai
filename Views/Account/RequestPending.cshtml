@{
    ViewData["Title"] = "Partner Application Submitted";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="card shadow-sm mx-auto" style="max-width:500px;">
        <div class="card-body text-center">
            <h2 class="card-title mb-3">Thank you for applying!</h2>
            <p class="card-text">
                Your partner application has been received successfully. Our team will review it and notify you via email within <strong>24 hours</strong>.
            </p>
            <a asp-action="Login" class="btn btn-primary mt-4">Back to Login</a>
        </div>
    </div>
</div>
