@model JapaneseLearningPlatform.Data.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Quên mật khẩu";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet" />
}

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="col-md-6 col-lg-5 shadow-lg p-5 rounded-4 bg-white">
        <div class="mb-4 text-center">
            <h3 class="fw-bold">Đặt lại mật khẩu</h3>
            <p class="text-muted">Hãy tạo mật khẩu mới cho tài khoản của bạn!</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Xin lỗi!</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control input-gradient" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100 gradient-outline-btn">
                <i class="bi bi-box-arrow-in-right me-1"></i> Gửi liên kết đặt lại
            </button>

            <hr />

            <p class="text-center">Quên tài khoản? <a asp-action="Register">Tạo tài khoản khác :3</a></p>

            <div class="mt-4 text-center">
                <a asp-controller="Account" asp-action="Login" class="text-muted small">
                    <i class="bi bi-arrow-left-circle"></i> Quay về trang đăng nhập
                </a>
            </div>
        </form>

    </div>
</div>
