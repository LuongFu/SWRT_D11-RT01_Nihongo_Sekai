@model JapaneseLearningPlatform.Data.ViewModels.ForgotPasswordVM

@{
    ViewData["Title"] = "Quên mật khẩu";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

@section Styles {
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600;700&display=swap"
      rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Source Sans Pro', sans-serif;
            background: #f7d7d7;
        }

        /* Kéo full 100vh, căn giữa card */
        .forgot-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;      /* <— đảm bảo full viewport */
            padding: 0;
        }

        .forgot-card {
            background: #fff;
            border-radius: 1rem;
            width: 360px;
            max-width: 90%;
            padding: 2rem;
            box-shadow: 0 12px 32px rgba(0,0,0,0.1);
            transition: transform .2s ease, box-shadow .2s ease;
        }
        .forgot-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 40px rgba(0,0,0,0.12);
        }

        .forgot-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .forgot-header h3 {
            color: #b71c1c;
            font-size: 1.75rem;
            font-weight: 700;
        }
        .forgot-header p {
            color: #555;
            margin: .5rem 0 1rem;
        }

        .input-red {
            border: none;
            border-radius: 2rem;
            padding: .75rem 1.25rem;
            background: #fde8e8;
            transition: box-shadow .2s;
        }
        .input-red:focus {
            box-shadow: 0 0 0 0.2rem rgba(183,28,28,0.4);
        }

        .btn-red {
            display: block;
            width: 100%;
            padding: .75rem;
            border: none;
            border-radius: 2rem;
            background: #d32f2f;
            color: #fff;
            font-weight: 600;
            transition: transform .2s, box-shadow .2s;
        }
        .btn-red:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        }

        .forgot-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: .875rem;
        }
        .forgot-footer a {
            color: #b71c1c;
            font-weight: 600;
            text-decoration: none;
            transition: color .2s;
        }
        .forgot-footer a:hover {
            color: #e53935;
        }
    </style>
}
}

<div class="forgot-wrapper">
    <div class="forgot-card">
        <div class="forgot-header">
            <h3>Đặt lại mật khẩu</h3>
            <p>Hãy tạo mật khẩu mới cho tài khoản của bạn!</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Xin lỗi!</strong> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control input-red" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-red mb-3">
                <i class="bi bi-envelope-fill me-2"></i> Gửi liên kết đặt lại
            </button>

            <div class="forgot-footer">
                <p>Quên tài khoản? <a asp-action="Register">Tạo tài khoản mới</a></p>
                <p>
                    <a asp-controller="Account" asp-action="Login">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay về đăng nhập
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
