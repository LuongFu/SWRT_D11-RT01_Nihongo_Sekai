@{
    ViewData["Title"] = "Video Meeting";
    ViewData["HideNavbar"] = false;
    ViewData["HideFooter"] = true;
    ViewData["HideChatbot"] = true;
    ViewData["LockScroll"] = true;
}
<style>
    body.home-lock-scroll {
        overflow: hidden;
        background-color: #000;
    }

    .video-header {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 16px;
        background-color: #000;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background-color: #1f1f1f;
        border: 1px solid #444;
        border-radius: 6px;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .btn-back i {
            font-size: 1.2rem;
        }

        .btn-back:hover {
            background-color: #e02424;
            border-color: #e02424;
            color: #fff;
            transform: translateY(-1px);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
        }
</style>
<div class="bg-black">
    <div class="video-header">
        <button class="btn-back" onclick="history.back()">
            <i class="bi bi-arrow-left"></i> Trở về
        </button>
    </div>
    <iframe src="https://video-comms.onrender.com"
            allow="camera; microphone; fullscreen; display-capture; clipboard-write"
            style="width: 100%; height: 100vh; border: none;">
    </iframe>
</div>
    
    