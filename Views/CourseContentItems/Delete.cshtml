@model CourseContentItem
@{
    ViewData["Title"] = "Delete Content Item";
}

<h3 class="text-danger">Are you sure you want to delete this content item?</h3>

<div>
    <h5>@Model.Title</h5>
    <p><strong>Type:</strong> @Model.ContentType</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Courses"
       asp-action="Details"
       asp-route-id="@(Model.Section != null ? Model.Section.CourseId : 0)"
       class="btn btn-secondary">Cancel</a>
</form>
