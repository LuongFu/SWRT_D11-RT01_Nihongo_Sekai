@model CourseContentItem

@{
    ViewData["Title"] = "Delete Content Item";
}

<!-- Internal Theme Styles -->
<style>
    h3.text-danger {
        color: #b91c1c;
        font-weight: bold;
    }

    .content-info {
        background-color: #fff0f0;
        border: 1px solid #fca5a5;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .content-info h5 {
            margin-bottom: 0.5rem;
            color: #7f1d1d;
        }

        .content-info p {
            margin-bottom: 0;
            font-weight: 500;
        }

    .btn-red {
        background-color: #dc2626;
        color: white;
        border: none;
    }

        .btn-red:hover {
            background-color: #b91c1c;
        }

    .btn-outline-red {
        background-color: white;
        color: #dc2626;
        border: 1px solid #dc2626;
    }

        .btn-outline-red:hover {
            background-color: #fef2f2;
            color: #b91c1c;
            border-color: #b91c1c;
        }
</style>

<div class="container mt-5 mb-4">
    <div class="card shadow-sm rounded-4 p-4">
        <h3 class="text-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Are you sure you want to delete this content item?
        </h3>

        <div class="content-info">
            <h5>@Model.Title</h5>
            <p><strong>Type:</strong> @Model.ContentType</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-red">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-controller="Courses"
                   asp-action="Details"
                   asp-route-id="@(Model.Section != null ? Model.Section.CourseId : 0)"
                   class="btn btn-outline-red">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
