@model NewCourseVM
@using JapaneseLearningPlatform.Models
@using JapaneseLearningPlatform.Data;
@using JapaneseLearningPlatform.Data.Enums;


@{
    ViewData["Title"] = "Tạo khóa học mới";
    ViewData["HideNavbar"] = false;
    ViewData["HideFooter"] = true;
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h4 class="mb-3">Tạo khóa học mới</h4>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPercent" class="control-label"></label>
                        <input asp-for="DiscountPercent" class="form-control" />
                        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageURL"></label>
                        <input asp-for="ImageURL" class="form-control" id="ImageURL" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CourseCategory"></label>
                        <select asp-for="CourseCategory" class="form-control" asp-items="Html.GetEnumSelectList<CourseCategory>()"></select>
                        <span asp-validation-for="CourseCategory" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-4 offset-4 text-center mb-3">
                <img id="ImageUrlPreview" style="width: 100%;" />
            </div>

            <div class="form-group d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-action="Index">Xem tất cả</a>
                <input type="submit" value="Tạo" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        });
    </script>
}
